<!DOCTYPE html>
<html>
  <head>
  </head>
  <body>
    <?php
      //String datatype examples
      $text = "Pooja";
      $name = 'Aditi';
      
      //Integer datatype examples
      $x = 5895;
      var_dump($x); // outputs int(5895) 
      //var_dump keyword returns the datatype and value of the variable
      
      //Float datatype example
      $y = 10.95;
      var_dump($y); // returns float(10.95)
      
      //Boolean datatype example
      $a = true;
      $b = false;
      
      //Array datatype example
      $cars = array('Volvo','BMW','Toyota');
      var_dump($cars); //outputs to array(3) { [0]=> string(5) "Volvo" [1]=> string(3) "BMW" [2]=> string(6) "Toyota" }
      
      //Object datatype example
      //Create class for the object to be created
      class Car {
        function Car() {
          this->model = 'VW';
          }
      }
      //Create an object
      $herbie = new Car();
      //Show object properties
      echo $herbie->model; //Outputs to VW
      
      //Null datatype example
      $c = 1;
      $c = null;
      var_dump($c); //Outputs to null (Null variable has no value assigned to it)
      
      //If a variable is created without a value, it is automatically assigned a value of NULL
    ?>
  </body>
</html>
