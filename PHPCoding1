    <?php
      //Echo keyword displays the text on the UI
      echo "My name is Aditi!";
      
      // This is a single-line comment

      # This is also a single-line comment

      /*
      This is a multiple-lines comment block
      that spans over multiple
      lines
      */
      
      // You can also use comments to leave out parts of a code line
      $x = 5 /* + 15 */ + 5;
      echo $x;
      
      // PHP is not case sensitive in case of keywords, classes, functions, user-defined functions
      ECHO "Hello World!<br>";
      echo "Hello World!<br>";
      EcHo "Hello World!<br>";
      
      //PHP is case sensitive in case of variable names
      $color = "red";
      echo "My car is " . $color . "<br>";
      echo "My house is " . $COLOR . "<br>";
      echo "My boat is " . $coLOR . "<br>";
      
      //Decalring a PHP variable
      $txt = "I am PHP text";
      echo $txt;
      
      //Displaying a output variable
      $txt = "Aniruddha<3";
      echo "I love $txt";
      
      //Displaying output variable: another example
      $x = 4; $y = 5;
      echo $x + $y;
      
    ?>
